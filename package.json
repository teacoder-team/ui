{
	"name": "@teacoder/ui",
	"version": "0.0.4",
	"description": "TeaCoder UI component library",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"repository": "https://github.com/teacoder-team/ui",
	"author": "TeaCoder <admin@teacoder.ru>",
	"license": "AGPL-3.0-or-later",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "npm run build:clean && npm run build:esm && npm run build:bundle && npm run build:types",
		"build:clean": "rimraf dist esm",
		"build:esm": "babel src --no-babelrc --out-dir esm --extensions \".ts,.tsx\" --config-file ./.babelrc.es && tsc",
		"build:types": "tsc",
		"watch:esm": "tsc-watch",
		"build:bundle": "babel src --out-dir lib --extensions \".ts,.tsx\"",
		"watch:bundle": "npm run build:bundle --watch"
	},
	"dependencies": {
		"@radix-ui/react-alert-dialog": "^1.1.4",
		"@radix-ui/react-avatar": "^1.1.2",
		"@radix-ui/react-dialog": "^1.1.4",
		"@radix-ui/react-dropdown-menu": "^2.1.4",
		"@radix-ui/react-label": "^2.1.1",
		"@radix-ui/react-radio-group": "^1.2.2",
		"@radix-ui/react-separator": "^1.1.1",
		"@radix-ui/react-slot": "^1.1.1",
		"@radix-ui/react-switch": "^1.1.2",
		"@vitejs/plugin-react": "^4.3.4",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"input-otp": "^1.4.1",
		"lucide-react": "^0.469.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-hook-form": "^7.54.2",
		"tailwind-merge": "^2.5.5",
		"tailwind-variants": "^0.3.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.26.4",
		"@babel/core": "^7.26.0",
		"@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
		"@babel/preset-env": "^7.26.0",
		"@babel/preset-react": "^7.26.3",
		"@babel/preset-typescript": "^7.26.0",
		"@types/node": "^22.10.2",
		"@types/react": "^18.3.16",
		"@types/react-dom": "^18.3.5",
		"autoprefixer": "^10.4.20",
		"babel-preset-minify": "^0.5.2",
		"postcss": "^8.4.49",
		"rimraf": "^6.0.1",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.2"
	}
}
