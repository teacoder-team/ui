{
	"name": "@teacoder/ui",
	"version": "0.0.1",
	"description": "TeaCoder UI component library",
	"type": "module",
	"repository": "https://github.com/teacoder-team/ui",
	"author": "TeaCoder <admin@teacoder.ru>",
	"license": "AGPL-3.0-or-later",
	"scripts": {
		"build": "npm run build:clean && npm run build:esm && npm run build:bundle",
		"build:clean": "rimraf dist esm",
		"build:esm": "babel src --no-babelrc --out-dir esm --extensions \".ts,.tsx\" --config-file ./.babelrc.es && tsc",
		"watch:esm": "tsc-watch",
		"build:bundle": "babel src --out-dir lib --extensions \".ts,.tsx\"",
		"watch:bundle": "npm run build:bundle --watch"
	},
	"dependencies": {
		"@radix-ui/react-slot": "^1.1.1",
		"@remixicon/react": "^4.6.0",
		"@vitejs/plugin-react": "^4.3.4",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tailwind-merge": "^2.5.5",
		"tailwind-variants": "^0.3.0",
		"vite": "^5.4.11",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^2.1.8"
	},
	"devDependencies": {
		"@babel/cli": "^7.26.4",
		"@babel/core": "^7.26.0",
		"@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
		"@babel/preset-env": "^7.26.0",
		"@babel/preset-react": "^7.26.3",
		"@babel/preset-typescript": "^7.26.0",
		"@types/node": "^22.10.2",
		"@types/react": "^18.3.16",
		"@types/react-dom": "^18.3.5",
		"autoprefixer": "^10.4.20",
		"babel-preset-minify": "^0.5.2",
		"postcss": "^8.4.49",
		"rimraf": "^6.0.1",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.2"
	}
}
